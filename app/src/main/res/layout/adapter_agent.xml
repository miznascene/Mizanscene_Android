<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center_vertical|center_horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/adapter_agent_imagemovieright"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:src="@drawable/puma_offer"
            android:scaleType="fitCenter"
            app:riv_corner_radius="5dip"
            app:riv_border_width="2dip"
            app:riv_border_color="#F1E1E1"
            app:riv_mutate_background="true"
            app:riv_tile_mode="repeat"
            app:riv_oval="false"
            android:layout_height="200dp"
            android:layout_width="150dp" />

        <com.example.mizansen.CustomView.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/hemase"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center_vertical|center_horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/adapter_agent_imagemoviecenter"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:src="@drawable/puma_offer"
            android:scaleType="fitCenter"
            app:riv_corner_radius="5dip"
            app:riv_border_width="2dip"
            app:riv_border_color="#F1E1E1"
            app:riv_mutate_background="true"
            app:riv_tile_mode="repeat"
            app:riv_oval="false"
            android:layout_height="200dp"
            android:layout_width="150dp" />

        <com.example.mizansen.CustomView.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/hemase"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center_vertical|center_horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/adapter_agent_imagemovieleft"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:src="@drawable/puma_offer"
            android:scaleType="fitCenter"
            app:riv_corner_radius="5dip"
            app:riv_border_width="2dip"
            app:riv_border_color="#F1E1E1"
            app:riv_mutate_background="true"
            app:riv_tile_mode="repeat"
            app:riv_oval="false"
            android:layout_height="200dp"
            android:layout_width="150dp" />

        <com.example.mizansen.CustomView.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/hemase"/>

    </LinearLayout>


</LinearLayout>