<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_logo_mizansence" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layoutDirection="ltr"
        android:orientation="vertical"
        android:padding="20dp">

        <com.example.mizansen.CustomView.EditTextCustom
            android:id="@+id/activitylogin_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_mail"
            android:drawablePadding="5dp"
            android:ems="10"
            android:gravity="right"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:paddingBottom="20dp" />

        <com.example.mizansen.CustomView.EditTextCustom
            android:id="@+id/activitylogin_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/ic_key"
            android:drawablePadding="5dp"
            android:ems="10"
            android:gravity="right"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingBottom="20dp" />

        <com.example.mizansen.CustomView.TextViewCustom
            android:id="@+id/activitylogin_forgotpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="25dp"
            android:padding="8dp"
            android:text="@string/forgotpassword" />

        <com.example.mizansen.CustomView.ButtonCustom
            android:id="@+id/activitylogin_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/backgrund_button_green"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/Login" />

        <com.example.mizansen.CustomView.TextViewCustom
            android:id="@+id/activitylogin_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="8dp"
            android:text="@string/Register" />

    </LinearLayout>
</LinearLayout>