<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Activity.MovieActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/sapp_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/stoolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">


            <ImageView
                android:id="@+id/movie_bimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/puma_offer" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8D000000">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="105dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal|center_vertical|right">


                    <com.example.mizansen.CustomView.TextViewCustom
                        android:id="@+id/movie_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|right"
                        android:padding="5dp"
                        android:text="@string/app_name"
                        android:textColor="@color/white"
                        android:textSize="25dp" />


                    <com.example.mizansen.CustomView.TextViewCustom
                        android:id="@+id/movie_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal|right"
                        android:padding="5dp"
                        android:layoutDirection="rtl"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                </LinearLayout>


            </RelativeLayout>


        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_movie" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/movie_fabplaye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        app:layout_anchorGravity="bottom|end"
        app:layout_anchor="@id/sapp_bar"
        app:srcCompat="@android:drawable/ic_media_play" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/movie_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        android:tint="@color/white"
        app:layout_anchorGravity="bottom|end"
        app:layout_anchor="@id/sapp_bar"
        app:srcCompat="@drawable/ic_like_off"
        tools:ignore="VectorDrawableCompat" />

    <LinearLayout
        android:id="@+id/llimage"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:layout_anchor="@id/sapp_bar"
        app:layout_anchorGravity="bottom|start">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/movie_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/fab_margin"
            android:scaleType="fitCenter"
            android:src="@drawable/puma_offer"
            app:riv_border_color="#F1E1E1"
            app:riv_border_width="2dip"
            app:riv_corner_radius="5dip"
            app:riv_mutate_background="true"
            app:riv_oval="false"
            app:riv_tile_mode="repeat" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>